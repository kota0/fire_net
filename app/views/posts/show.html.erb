<%= render 'layouts/header' %>

<div class="main-wrapper">
  <div class="container">
    <div class="areas_box">
      <pre><p>第<%= @post.state.direction_id %>方面 <%= @post.state.name %> ・ <%= @post.area.name %>  被害状況</p></pre>

      <% if @post.images.attached? %>
        <% if @post.images.length < 2 %>
          <% @post.images.each do |image| %>
            <%= image_tag image, class: "post-img" %>
          <% end %>
        <% else %>
          <div class="previews">
            <div class="slider">
              <% @post.images.each do |image| %>
                <div>
                  <%= image_tag image, class: "slick-posts-img" %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>

      <% if @post.video.attached? %>
        <td>
          <video src="<%= rails_blob_path(@post.video) %> " type="video/mp4" width="500" height="280" controls></video>
        </td>
      <% end %>
    </div>

    <div class="posts-box">
      <h1><span>《被害状況》</span></h1>
      <div>
        <pre>・所在：  <%= @post.state.name %> <%= @post.area.name %></pre>
      </div>
      <div>
        <pre>・番地/目印：  <%= @post.mark %></pre>
      </div>
      <div>
        <pre>・ケガ人の人数： <%= @post.injury.name %></pre>
      </div>
      <div>
        <pre>・逃げ遅れの人数：  <%= @post.escape.name %></pre>
      </div>
      <div>
        <pre>・消防隊の要請：  <%= @post.help.name %></pre>
      </div>
      <div>
        <pre>・詳細内容： <%= @post.content %></pre>
      </div>
      <div>
        <pre>・対応状況： <%= @status_name %></pre>
      </div>
    </div>
  </div>
</div>

<div class=comment-box>
  <div id="comments">
    <p>《コメント一覧》</p>
    <% @comments.each do |comment| %>
      <div class="comment">
        <p><%= comment.comment %></p>
        <p><%= comment.status %></p>
      </div>
    <% end %>
  </div>

  <p>コメント入力フォーム(仮)</p>
  <div class="comment-form">
    <% if user_signed_in? %>
      <%= form_with model: [@post, @comment] do |f| %>
        <%= f.text_area :comment, class: "comment-text" %><br>
        <%= f.submit "送信", class: "comment-submit" %>
      <% end %>
    <% end %>
  </div>

  <p>対応状況変更フォーム(仮)</p>
  <%= form_with model: @post do |f| %>
    <%= f.select :status, [["未対応", ""],["対応中", 1], ["対応済み", 2]], include_blank: "対応状況を選択してください" %>
    <%= f.submit "送信", class: "comment-submit" %>
  <% end %>
</div>
