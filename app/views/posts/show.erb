
<div id="comments">
  <h4>＜コメント一覧＞</h4>
    <% @comments.comments.each do |comment| %>
      <div class="comment">
        <p class="user-info"><%= comment.user.name %>: </p>
        <p><%= comment.text%></p>
      </div>
    <% end %>
</div>

<div class="comment-form">
  <% if user_signed_in? %>
    <%= form_with model: [@post, @comment], id: "comment-form" do |f| %>
      <%= f.text_area :text , class: "comment-text"%>
      <%= f.submit "コメントをする", class: "comment-submit" %>
    <% end %>
  <% end %>
</div>