
 
 <header>
  <%= render 'layouts/header' %>
 </header> 

<div class="main-wrpper">
   <div class="container">
     <div class="areas_box">
       <% @posts.each do |post| %> 
        <%= link_to(post_path(post.id), method: :get) do %>
         <p>第<%= post.state.direction_id %>方面 <%= post.state.name %> ・  <%= post.area.name %> 被害状況</p>
      

          <div class="view_box">
            <% if post.image.attached? %>
             <td><%= image_tag post.image, class: "post-img" %></td>  
            <% end %> 
        
            <% if post.video.attached? %> 
             <td> <video src="<%= rails_blob_path(post.video) %> "type="video/mp4"  width="500" height="280"  controls ></video></td>
            <% end %>
          </div>
     
          <div class="posts-box">
            <div><%= post.state.name %></div><br>
            <div> <%= post.area.name %></div><br>
            <div> <%= post.mark %></div><br>
            <div><%= post.injury.name %></div><br>
            <div><%= post.escape.name%></div><br>
            <div><%= post.content %></div><br>
          </div>
        </div>
       <% end %>
      <% end %> 
     </div>
   </div>
</div>


      

 <div class="contents_row">
   <%= link_to( new_post_path, class: 'post-btn', data: {"turbolinks" => false}) do %>
     <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#1e90ff" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
     <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"/>
     </svg>
    <% end%>
 </div>


 <footer>
  <%= render 'layouts/footer' %>
</footer>
