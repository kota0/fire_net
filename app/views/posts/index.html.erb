
 
 <header>
  <%= render 'layouts/header' %>
 </header> 

<div class="main-page">
    <div class="areas_box">
    <% @posts.each do |post| %> 
      <%= link_to(post_path(post.id), method: :get) do %>
          <p>第<%= post.state.direction_id %>方面 <%= post.state.name %> ・  <%= post.area.name %> 被害状況</p>
          
     <div class="view_box">
        <div class="images-box">
          <% if post.image.attached? %>
            <td><%= image_tag post.image, class: "post-img" %></td>  
          <% end %> 
        </div>
        
        <div class= "video-box">
          <% if post.video.attached? %> 
            <td> <video src="<%= rails_blob_path(post.video) %> "type="video/mp4"  width="500" height="280"  controls ></video></td>
          <% end %>
        </div>
     </div>









    <div class="posts-box">
          <div class="post-box">
              <td> <%= post.state.name %></td>
          </div>
          <div class="post-box">
              <td> <%= post.area.name %></td>
          </div>
                <td> <%= post.mark %></td>
          </div>
          <div class="post-box">
              <td> <%= post.injury.name %></td>
          </div>
          <div class="post-box">
              <td> <%= post.escape.name%></td>
            </div>
            <div class="post-box">
              <td> <%= post.content %></td>
            </div>
         <% end %>
        <% end %> 
    </div>
</div>

      

 <div class="contents_row">
   <%= link_to( new_post_path, class: 'post-btn', data: {"turbolinks" => false}) do %>
     <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#1e90ff" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
     <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"/>
     </svg>
    <% end%>
 </div>


 <footer>
  <%= render 'layouts/footer' %>
</footer>
